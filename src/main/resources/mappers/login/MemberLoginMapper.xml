<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.com.ssanai.jumplearn.mapper.login.MemberLoginMapper">
<!--회원 - 로그인 -->
    <select id="login" parameterType="net.com.ssanai.jumplearn.vo.MemberDTO" resultType="net.com.ssanai.jumplearn.vo.MemberVO">
        SELECT `id`, `name`, `status` FROM tbl_member
        WHERE id = "#{id}"
        AND `password` = SHA2("#{password}", 256);
    </select>
</mapper>
    